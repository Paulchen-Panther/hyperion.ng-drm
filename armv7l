FROM balenalib/raspberry-pi2:bullseye-build

ENV QEMU_EXECVE 1

RUN [ "cross-build-start" ]

# Install dependencies
RUN install_packages \
	python3-dev \
	qtbase5-dev \
	libqt5serialport5-dev \
	libqt5sql5-sqlite \
	libqt5svg5-dev \
	build-essential \
	libusb-1.0-0-dev \
	libcec-dev \
	libavahi-core-dev \
	libavahi-compat-libdnssd-dev \
	zlib1g-dev \
	libraspberrypi-dev \
	libssl1.0-dev \
	libgbm-dev \
	libturbojpeg0-dev && \
	libdrm-dev && \
	cmake

RUN [ "cross-build-end" ]

# we use always qemu
ENTRYPOINT ["/usr/bin/qemu-arm-static"]
