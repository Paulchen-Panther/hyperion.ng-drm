FROM balenalib/rpi-debian:bookworm-build

ENV QEMU_EXECVE 1

RUN [ "cross-build-start" ]

# Install dependencies
RUN install_packages \
	cmake \
	python3-dev \
	qtbase5-dev \
	libqt5serialport5-dev \
	libqt5sql5-sqlite \
	libqt5svg5-dev \
	build-essential \
	libusb-1.0-0-dev \
	libcec-dev \
	libavahi-core-dev \
	libavahi-compat-libdnssd-dev \
	zlib1g-dev \
	libssl-dev \
	libgbm-dev \
	libgles2-mesa-dev \
	libyuv-dev \
	libdrm-dev \
	libturbojpeg0-dev

RUN [ "cross-build-end" ]

# we use always qemu
ENTRYPOINT ["/usr/bin/qemu-arm-static"]
